<apex:page standardController="Position__c" >
    <apex:form >
        <apex:pageBlock title="Enter details for position">
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!Position__c.Name}"/>
                <apex:inputField value="{!Position__c.MaxYearPay__c}"/>
                <apex:inputField value="{!Position__c.MinYearPay__c}"/>
                <apex:inputField value="{!Position__c.Occupation__c}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>