<apex:page standardController="Job_Application__c">
    <apex:form >
        <apex:pageBlock title="Enter details for job application">
            <apex:pageBlockSection columns="1">
                <apex:inputfield value="{!Job_Application__c.Name}"/>
                <apex:inputfield value="{!Job_Application__c.Status__c}"/>
                <apex:inputfield value="{!Job_Application__c.CoverLetter__c}"/>
                <apex:inputfield value="{!Job_Application__c.Candidate__c}"/>      
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="save"/>
            </apex:pageBlockButtons>     
        </apex:pageBlock>
    </apex:form>
    
</apex:page>